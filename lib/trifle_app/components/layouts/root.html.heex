<!DOCTYPE html>
<html lang="en" style="scrollbar-gutter: stable;">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title suffix=" | Trifle">
      <%= TrifleApp.CoreComponents.format_breadcrumb(assigns[:page_title] || "Trifle") %>
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/app.css"} />
    <!-- Highcharts Dashboards - following official documentation -->
    <script src="https://code.highcharts.com/dashboards/datagrid.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>
    <script src="https://code.highcharts.com/dashboards/dashboards.js"></script>
    <script src="https://code.highcharts.com/dashboards/modules/layout.js"></script>
    <link rel="stylesheet" href="https://code.highcharts.com/css/highcharts.css" />
    <link rel="stylesheet" href="https://code.highcharts.com/dashboards/css/dashboards.css" />
    <link rel="stylesheet" href="https://code.highcharts.com/dashboards/css/datagrid.css" />
    
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        console.log('DOM loaded, checking Dashboards...');
        console.log('Dashboards available:', typeof window.Dashboards !== 'undefined');
        if (typeof window.Dashboards !== 'undefined') {
          console.log('Dashboards.board available:', typeof window.Dashboards.board === 'function');
          window.dashboardsReady = true;
          window.dispatchEvent(new CustomEvent('dashboards-loaded'));
          console.log('✅ Dashboards ready!');
        } else {
          console.error('❌ Dashboards not available');
        }
      });
    </script>
    <script defer phx-track-static type="text/javascript" src={~p"/assets/app.js"}></script>
    <script defer src="https://unpkg.com/alpinejs@3.10.5/dist/cdn.min.js"></script>
  </head>
  <body class={"#{TrifleApp.CoreComponents.theme_classes((assigns[:current_user] && assigns.current_user.theme) || "system")} bg-slate-100 dark:bg-slate-900 text-gray-900 dark:text-white antialiased h-screen"} {TrifleApp.CoreComponents.theme_data_attrs((assigns[:current_user] && assigns.current_user.theme) || "system")}>
    <%= @inner_content %>
  </body>
</html>
