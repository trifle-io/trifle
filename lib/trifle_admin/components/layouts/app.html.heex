          <div class="hidden md:block">
            <div class="ml-4 flex items-center md:ml-6">
              <.link
                navigate={~p"/"}
                class="text-orange-600 dark:text-orange-400 hover:bg-slate-200 dark:hover:bg-slate-700 hover:text-orange-700 dark:hover:text-orange-300 px-3 py-2 rounded-md text-sm font-medium mr-4"
              >
                Exit Admin
              </.link>
              <button
                type="button"
                class="rounded-full bg-gray-100 dark:bg-slate-800 p-1 text-gray-500 dark:text-slate-400 hover:text-gray-700 dark:hover:text-white focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 focus:ring-offset-gray-100 dark:focus:ring-offset-slate-800"
              >
                <span class="sr-only">View notifications</span>
                <!-- Heroicon name: outline/bell -->
                <svg
                  class="h-6 w-6"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0"
                  />
                </svg>
              </button>

              <div class="relative ml-3" x-data="{open: false}" x-on:click.away="open = false">
                <div x-on:click="open = !open">
                  <button
                    type="button"
                    class="flex max-w-xs items-center rounded-full bg-gray-100 dark:bg-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 focus:ring-offset-gray-100 dark:focus:ring-offset-slate-800"
                    id="user-menu-button"
                    aria-expanded="false"
                    aria-haspopup="true"
                  >
                    <span class="sr-only">Open user menu</span>
                    {gravatar(@current_user.email)}
                  </button>
                </div>

                <div
                  class="absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
                  role="menu"
                  aria-orientation="vertical"
                  aria-labelledby="user-menu-button"
                  tabindex="-1"
                  x-show="open"
                  x-transition:enter="transition ease-out duration-100"
                  x-transition:enter-start="transform opacity-0 scale-95"
                  x-transition:enter-end="transform opacity-100 scale-100"
                  x-transition:leave="transition ease-in duration-75"
                  x-transition:leave-start="transform opacity-100 scale-100"
                  x-transition:leave-end="transform opacity-0 scale-95"
                >
                  <.link
                    navigate={~p"/users/settings"}
                    class="block px-4 py-2 text-sm text-gray-700"
                  >
                    Your Profile
                  </.link>
                  <.link
                    navigate={~p"/users/settings"}
                    class="block px-4 py-2 text-sm text-gray-700"
                  >
                    Settings
                  </.link>

                  <.link
                    href={~p"/users/log_out"}
                    method="delete"
                    class="block px-4 py-2 text-sm text-gray-700"
                  >
                    Log out
                  </.link>
                </div>
              </div>
            </div>
          </div>
          <div class="-mr-2 flex md:hidden">
            <!-- Mobile menu button -->
            <button
              type="button"
              class="inline-flex items-center justify-center rounded-md bg-gray-100 dark:bg-slate-800 p-2 text-gray-500 dark:text-slate-400 hover:bg-slate-200 dark:hover:bg-slate-700 hover:text-gray-700 dark:hover:text-white focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 focus:ring-offset-gray-100 dark:focus:ring-offset-slate-800"
              aria-controls="mobile-menu"
              aria-expanded="false"
              x-on:click="isMobileOpened = !isMobileOpened"
            >
              <span class="sr-only">Open main menu</span>
              <svg
                class="block h-6 w-6"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
                x-show="!isMobileOpened"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                />
              </svg>
              <svg
                class="h-6 w-6"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
                x-show="isMobileOpened"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
      </div>
      
<!-- Mobile menu, show/hide based on menu state. -->
      <div
        class="md:hidden"
        id="mobile-menu"
        x-show="isMobileOpened"
        x-transition:enter="transition duration-150 ease-out"
        ,
        x-transition:enter-start="opacity-0 transform scale-95"
        ,
        x-transition:enter-end="opacity-100 transform scale-100"
        ,
        x-transition:leave="transition duration-100 ease-in"
        ,
        x-transition:leave-start="opacity-100 transform scale-100"
        ,
        x-transition:leave-end="opacity-0 transform scale-95"
      >
        <div class="space-y-1 px-2 pt-2 pb-3 sm:px-3">
          {live_active_link(@socket, :dashboard, "Overview", to: ~p"/admin", variant: :mobile)}
          {live_active_link(@socket, :organizations, "Organizations",
            to: ~p"/admin/organizations",
            variant: :mobile
          )}
          {live_active_link(@socket, :users, "Users", to: ~p"/admin/users", variant: :mobile)}
          {live_active_link(@socket, :projects, "Projects",
            to: ~p"/admin/projects",
            variant: :mobile
          )}
          {live_active_link(@socket, :databases, "Databases",
            to: ~p"/admin/databases",
            variant: :mobile
          )}
          {live_active_link(@socket, :dashboards, "Dashboards",
            to: ~p"/admin/dashboards",
            variant: :mobile
          )}
          {live_active_link(@socket, :monitors, "Monitors",
            to: ~p"/admin/monitors",
            variant: :mobile
          )}
        </div>
        <div class="border-t border-gray-200 dark:border-slate-600 pt-2 pb-3">
          <div class="space-y-1 px-2">
            <.link
              navigate={~p"/"}
              class="text-orange-600 dark:text-orange-400 hover:bg-slate-200 dark:hover:bg-slate-700 hover:text-orange-700 dark:hover:text-orange-300 block px-3 py-2 rounded-md text-base font-medium"
            >
              Exit Admin
            </.link>
          </div>
        </div>
        <div class="border-t border-gray-200 dark:border-slate-600 pt-4 pb-3">
          <div class="flex items-center px-5">
            <div class="flex-shrink-0">
              {gravatar(@current_user.email)}
            </div>
            <div class="ml-3">
              <div class="text-base font-medium text-slate-900 dark:text-white">
                {@current_user.email}
              </div>
              <div class="text-sm font-medium text-slate-600 dark:text-slate-400">
                {@current_user.email}
              </div>
            </div>
            <button
              type="button"
              class="ml-auto flex-shrink-0 rounded-full bg-gray-100 dark:bg-slate-800 p-1 text-gray-500 dark:text-slate-400 hover:text-gray-700 dark:hover:text-white focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 focus:ring-offset-gray-100 dark:focus:ring-offset-slate-800"
            >
              <span class="sr-only">View notifications</span>
              <!-- Heroicon name: outline/bell -->
              <svg
                class="h-6 w-6"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0"
                />
              </svg>
            </button>
          </div>
          <div class="mt-3 space-y-1 px-2">
            <.link
              navigate={~p"/users/settings"}
              class="block rounded-md px-3 py-2 text-base font-medium text-slate-600 dark:text-slate-400 hover:bg-slate-200 dark:hover:bg-slate-700 hover:text-slate-900 dark:hover:text-white"
            >
              Your Profile
            </.link>
            <.link
              navigate={~p"/users/settings"}
              class="block rounded-md px-3 py-2 text-base font-medium text-slate-600 dark:text-slate-400 hover:bg-slate-200 dark:hover:bg-slate-700 hover:text-slate-900 dark:hover:text-white"
            >
              Settings
            </.link>

            <.link
              href={~p"/users/log_out"}
              method="delete"
              class="block px-4 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-200 dark:hover:bg-slate-700 hover:text-slate-900 dark:hover:text-white rounded-md"
            >
              Log out
            </.link>
          </div>
        </div>
      </div>
    </nav>
  <% end %>
  
<!-- Global notification live region, render this permanently at the end of the document -->
  <%= if Phoenix.Flash.get(@flash, :info) do %>
    <div
      aria-live="assertive"
      class="pointer-events-none fixed inset-0 flex items-end px-4 py-6 sm:items-start sm:p-6 z-50"
      role="alert"
      phx-value-key="info"
      x-data="{show: true}"
      x-init="setTimeout(() => { show = false; setTimeout(() => $wire.call('lv:clear-flash', 'info'), 300); }, 5000)"
      x-show="show"
      x-transition:enter="transition ease-out duration-100"
      x-transition:enter-start="transform opacity-0 scale-95"
      x-transition:enter-end="transform opacity-100 scale-100"
      x-transition:leave="transition ease-in duration-75"
      x-transition:leave-start="transform opacity-100 scale-100"
      x-transition:leave-end="transform opacity-0 scale-95"
    >
      <div class="flex w-full flex-col items-center space-y-4 sm:items-end">
        <!--
      Notification panel, dynamically insert this into the live region when it needs to be displayed

      Entering: "transform ease-out duration-300 transition"
        From: "translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2"
        To: "translate-y-0 opacity-100 sm:translate-x-0"
      Leaving: "transition ease-in duration-100"
        From: "opacity-100"
        To: "opacity-0"
    -->
        <div class="pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg bg-white shadow-lg ring-1 ring-black ring-opacity-5">
          <div class="p-4">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg
                  class="h-6 w-6 text-green-400"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
              </div>
              <div class="ml-3 w-0 flex-1 pt-0.5">
                <p class="text-sm text-gray-900">{Phoenix.Flash.get(@flash, :info)}</p>
              </div>
              <div class="ml-4 flex flex-shrink-0">
                <button
                  type="button"
                  class="inline-flex rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2"
                  @click="show = false; setTimeout(() => $wire.call('lv:clear-flash', 'info'), 300)"
                >
                  <span class="sr-only">Close</span>
                  <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%= if Phoenix.Flash.get(@flash, :error) do %>
    <div
      aria-live="assertive"
      class="pointer-events-none fixed inset-0 flex items-end px-4 py-6 sm:items-start sm:p-6 z-50"
      role="alert"
      phx-value-key="error"
      x-data="{show: true}"
      x-init="setTimeout(() => { show = false; setTimeout(() => $wire.call('lv:clear-flash', 'error'), 300); }, 5000)"
      x-show="show"
      x-transition:enter="transition ease-out duration-100"
      x-transition:enter-start="transform opacity-0 scale-95"
      x-transition:enter-end="transform opacity-100 scale-100"
      x-transition:leave="transition ease-in duration-75"
      x-transition:leave-start="transform opacity-100 scale-100"
      x-transition:leave-end="transform opacity-0 scale-95"
    >
      <div class="flex w-full flex-col items-center space-y-4 sm:items-end">
        <!--
      Notification panel, dynamically insert this into the live region when it needs to be displayed

      Entering: "transform ease-out duration-300 transition"
        From: "translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2"
        To: "translate-y-0 opacity-100 sm:translate-x-0"
      Leaving: "transition ease-in duration-100"
        From: "opacity-100"
        To: "opacity-0"
    -->
        <div class="pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg bg-white shadow-lg ring-1 ring-black ring-opacity-5">
          <div class="p-4">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6 text-red-400"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z"
                  />
                </svg>
              </div>
              <div class="ml-3 w-0 flex-1 pt-0.5">
                <p class="text-sm text-gray-900">{Phoenix.Flash.get(@flash, :error)}</p>
              </div>
              <div class="ml-4 flex flex-shrink-0">
                <button
                  type="button"
                  class="inline-flex rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2"
                  @click="show = false; setTimeout(() => $wire.call('lv:clear-flash', 'error'), 300)"
                >
                  <span class="sr-only">Close</span>
                  <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%= if assigns[:page_title] do %>
    <header class="bg-white dark:bg-slate-800 shadow-sm">
      <div class="mx-auto max-w-full py-4 px-4 sm:px-6 lg:px-8">
        <%= if assigns[:breadcrumb_links] do %>
          {TrifleApp.CoreComponents.breadcrumb_links(%{breadcrumbs: assigns[:breadcrumb_links]})}
        <% else %>
          <h1 class="text-lg font-semibold leading-6 text-gray-900 dark:text-white">
            {TrifleApp.CoreComponents.format_breadcrumb(assigns[:page_title])}
          </h1>
        <% end %>
      </div>
    </header>
  <% end %>
  <main>
    <div class="mx-auto max-w-full py-6 sm:px-6 lg:px-8">
      {@inner_content}
    </div>
  </main>
</div>
